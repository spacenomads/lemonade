<!DOCTYPE html>
<html lang="{{ settings.lang }}">
	<head>
		{% set pageType = 'post' %}
		{% include "../page-sections/head.njk" %}
	</head>
	<body class="lemon">
		<div class="lemon__container">
			{% include "../page-sections/header.njk" %}
			<main class="lemon__main main">
				<article class="post post--entry">

					{% include "components/post/header.njk" %}
					<div class="content">
						<div class="wrapper">
							<div class="content__inner">
								{{ content | safe }}
								     {# content__inner #}
							</div>
						</div>
					</div>
					<footer class="post__footer">
						<img class="post__ya" src="img/{{ ya_image }}" alt="{{ ya_alt }}">

						<div class="wrapper">
							{% include "components/post/comments.njk" %}
						</div>
					</footer>
				</article>
			</main>
			{% include "../page-sections/footer.njk" %}
		</div>
	</body>
</html>
